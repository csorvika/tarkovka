datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL") // Prisma tudja külön kezelni
}



generator client {
  provider        = "prisma-client-js"
  previewFeatures = []
}

model Item {
  id        String   @id @default(uuid())
  name      String
  price     Int?
  image     String?
  createdAt DateTime @default(now())
}
